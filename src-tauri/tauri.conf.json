{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flash",
  "version": "0.1.0",
  "identifier": "com.ksingh1.flash",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "flash",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: 'unsafe-eval' 'unsafe-inline' 'self' img-self"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
